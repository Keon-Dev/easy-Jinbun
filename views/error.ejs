<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-danger mt-5">
        <div class="card-header bg-danger text-white">
          <h4 class="mb-0"><%= title || 'エラー' %></h4>
        </div>
        <div class="card-body">
          <% if (locals.errors && locals.errors.length > 0) { %>
            <div class="alert alert-danger">
              <h5>以下の項目を修正してください:</h5>
              <ul class="mb-0">
                <% errors.forEach(error => { %>
                  <li><strong><%= error.field %>:</strong> <%= error.message %></li>
                <% }) %>
              </ul>
            </div>
          <% } else if (message) { %>
            <p class="text-danger"><%= message %></p>
          <% } else { %>
            <p class="text-danger">エラーが発生しました。</p>
          <% } %>
          
          <div class="mt-3">
            <button onclick="history.back()" class="btn btn-primary">戻る</button>
            <a href="/" class="btn btn-secondary">トップへ</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>